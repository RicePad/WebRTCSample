<div class="row">
  <div class="col m6 offset-m3 center">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'shared/devisemes' %>

      <div class="input-field">

        <%= f.text_field :name, autofocus: true, placeholder: "name" %>
      </div>

      <div class="input-field">

        <%= f.email_field :email, placeholder: "email" %>
      </div>

      <div class="input-field">

        <% if @minimum_password_length %>

        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder: "password" %>
      </div>

      <div class="input-field">

        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "password confirmation" %>
      </div>

      <button class="btn waves-effect waves-light" type="submit" name="action">Sing Up </button>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
